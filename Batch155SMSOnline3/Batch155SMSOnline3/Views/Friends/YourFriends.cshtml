@model IEnumerable<Batch155SMSOnline3.Models.Friend>
@{
    ViewBag.Title = "YourFriends";
    Layout = "~/Views/Shared/_LayoutSMS.cshtml";
}
<br />
<br />


<style>
    .online {
        position: relative;
    }

    .online-list {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .online-list .online {
            width: 50px;
            border-radius: 50%;
            margin-right: 15px;
        }

            .online-list .online img {
                width: 50px;
                border-radius: 50%;
            }
</style>
<section>

    
    <div class="container">

        <h2>Your Friends</h2>
        <br />

        <div class="row">




            @foreach (var item in Model)
            {
                if (item.IdUserFriendReceive == int.Parse(User.Identity.Name))
                {
                    <div class="col-md-6">
                        <div class="online-list">
                            <div class="col-md-2 online">
                                <img src="@Url.Content("~/"+ Html.DisplayFor(modelItem => item.Customer.Image))">
                            </div>
                            <div class="col-md-6 online">

                                <div>@Html.DisplayFor(modelItem => item.Customer.CustomerName)</div>
                                <div>Phone: @Html.DisplayFor(modelItem => item.Customer.PhoneNumber)</div>
                            </div>

                            <div class="col-md-2">
                               
                                <a href='@Url.Action("DeleteFriend", "Friends", new { id = item.Id })' style="color:red">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-6">
                        <div class="online-list">
                            <div class="col-md-2 online">
                                <img src="@Url.Content("~/"+ Html.DisplayFor(modelItem => item.Customer1.Image))">
                            </div>
                            <div class="col-md-6 online">

                                <div>@Html.DisplayFor(modelItem => item.Customer1.CustomerName)</div>
                                <div>Phone: @Html.DisplayFor(modelItem => item.Customer1.PhoneNumber)</div>
                            </div>

                            <div class="col-md-2">
                               
                                <a href='@Url.Action("DeleteFriend", "Friends", new { id = item.Id })' style="color:red">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </div>
                }


            }

            <br />


        </div>




    </div>

</section>


