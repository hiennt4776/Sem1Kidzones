@model IEnumerable<Batch155SMSOnline3.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/_LayoutDashboard.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Username</th>
        <th>Full Name</th>

        <th>Gender</th>
       
        <th>Phone Number</th>
        <th>Identity Card</th>
        <th>UserRole</th>
        <th>Stop</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>


    @if (item.Gender == true)
    {
        <td>Male</td>
    }
    else
    {
        <td>Female</td>
    }

    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IdentityCard)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserRole)
    </td>

    @if (item.Stop == true)
    {
        <td>Stopped</td>
    }
    else
    {
        <td></td>
    }
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Reset Password", "ResetPassword", new { id = item.Id })

    </td>
</tr>
    }

</table>
