@model Batch155SMSOnline3.Models.Service

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/_LayoutDashboard.cshtml";

    int iduser = (int)ViewBag.cusID;
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/formValidate/ServiceValidate.js"></script>
}




<div class="page-wrapper">

    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">

                    <div class="card-header">
                        <h5>Update a <i>Service</i>.</h5>
                        <!--<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>-->
                    </div>

                    <div class="card-block">
                        @using (Html.BeginForm("Edit", "Services", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditService" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">@Html.LabelFor(model => model.ServiceName)</label>
                                <div class="col-sm-10">

                                    @Html.TextBoxFor(model => model.ServiceName, new { @class = "form-control", @placeholder = "Type Service.." })
                                    @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">@Html.LabelFor(model => model.ServiceImage)</label>
                                <div class="col-sm-10">
                                    <input type="file" name="image" class="form-control">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">@Html.LabelFor(model => model.IdLevel)</label>
                                <div class="col-sm-10">

                                    @Html.DropDownList("IdLevel", null, htmlAttributes: new { @class = "form-control" })

                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">@Html.LabelFor(model => model.Price)</label>
                                <div class="col-sm-10">

                                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">@Html.LabelFor(model => model.StopServices)</label>
                                <div class="col-sm-10">

                                    @Html.DropDownListFor(model => model.StopServices, new List<SelectListItem>() {
                                        new SelectListItem(){ Selected = false, Text="Open" ,Value = "false"},
                                        new SelectListItem(){ Selected = true, Text="Block" ,Value = "true"}

                                    }, htmlAttributes: new { @class = "form-control" })

                                </div>
                            </div>

                            @Html.Hidden("IdUser", iduser)

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Update" class="btn btn-primary waves-effect waves-light" />
                                </div>
                            </div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>
</div>
